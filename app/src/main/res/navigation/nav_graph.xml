<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/magicFragment">

    <!-- Magic Section -->
    <fragment
        android:id="@+id/magicFragment"
        android:name="pol.rubiano.magicapp.features.presentation.ui.MagicFragment"
        android:label="@string/magic_title">

        <action
            android:id="@+id/act_fromMagic_toKeywordsFragment"
            app:destination="@+id/keywordsFragment" />
        <action
            android:id="@+id/action_fromMagic_toLegalitiesFragment"
            app:destination="@+id/legalitiesFragment" />
    </fragment>

    <fragment
        android:id="@+id/keywordsFragment"
        android:name="pol.rubiano.magicapp.features.presentation.ui.magic.KeywordsFragment"
        android:label="@string/keyword_title" />

    <fragment
        android:id="@+id/legalitiesFragment"
        android:name="pol.rubiano.magicapp.features.presentation.ui.magic.LegalitiesFragment"
        android:label="@string/legality_title" />

    <!-- Collections List -->
    <fragment
        android:id="@+id/collectionsList"
        android:name="pol.rubiano.magicapp.features.collections.presentation.CollectionsList"
        android:label="@string/collections_list_title">

        <action
            android:id="@+id/act_fromCollectionsList_toNewCollectionForm"
            app:destination="@+id/newCollectionForm" />

        <action
            android:id="@+id/act_fromCollectionsList_toCollectionPanel"
            app:destination="@+id/collectionPanel">
        </action>
    </fragment>

    <!-- newCollectionForm -->
    <fragment
        android:id="@+id/newCollectionForm"
        android:name="pol.rubiano.magicapp.features.collections.presentation.NewCollectionForm"
        android:label="@string/str_newCollectionTitle">

        <action
            android:id="@+id/act_fromNewCollectionForm_toCollectionsList"
            app:destination="@+id/collectionsList" />
    </fragment>

    <fragment
        android:id="@+id/collectionPanel"
        android:name="pol.rubiano.magicapp.features.collections.presentation.CollectionPanel"
        android:label="@string/strCollectionPanel">

        <argument
            android:name="collectionName"
            app:argType="string"
            app:nullable="true"/>

        <action
            android:id="@+id/act_fromCollectionPanel_toCollectionsList"
            app:destination="@+id/collectionsList" />

        <action
            android:id="@+id/act_fromCollectionPanel_toSearchFragment"
            app:destination="@+id/searchFragment">

            <argument
                android:name="collectionName"
                app:argType="string"
                app:nullable="true"/>
        </action>
    </fragment>


    <!-- DECKS-->
    <fragment
        android:id="@+id/decksFragment"
        android:name="pol.rubiano.magicapp.features.decks.DecksFragment"
        android:label="@string/str_decks">

        <action
            android:id="@+id/act_fromDecksFragment_toNewDeckFragment"
            app:destination="@+id/newDeckFragment" />

        <action
            android:id="@+id/act_fromDecksFragment_toDeckDetails"
            app:destination="@+id/deckDetailsFragment">

            <argument
                android:name="deck"
                app:argType="pol.rubiano.magicapp.features.domain.models.Deck"
                app:nullable="false" />
        </action>
    </fragment>

    <!-- DECK NEW -->
    <fragment
        android:id="@+id/newDeckFragment"
        android:name="pol.rubiano.magicapp.features.decks.newdeck.NewDeckFragment"
        android:label="@string/str_new_deck">

        <action
            android:id="@+id/act_fromNewDeckFragment_toDeckDetailsFragment"
            app:destination="@+id/deckDetailsFragment">

            <argument
                android:name="deck"
                app:argType="pol.rubiano.magicapp.features.domain.models.Deck"
                app:nullable="false" />
        </action>
    </fragment>

    <!-- DECK DETAILS -->
    <fragment
        android:id="@+id/deckDetailsFragment"
        android:name="pol.rubiano.magicapp.features.decks.deckdetails.DeckDetailsFragment"
        android:label="@string/str_deck_details">

        <argument
            android:name="deck"
            app:argType="pol.rubiano.magicapp.features.domain.models.Deck"
            app:nullable="false" />

        <action
            android:id="@+id/act_fromDeckDetails_toDecksFragment"
            app:destination="@+id/decksFragment" />

        <action
            android:id="@+id/act_fromDeckDetails_toSearchFragment"
            app:destination="@id/searchFragment">

            <argument
                android:name="deck"
                app:argType="pol.rubiano.magicapp.features.domain.models.Deck"
                app:nullable="false" />
        </action>
    </fragment>

    <!-- RANDOM CARD -->
    <fragment
        android:id="@+id/randomCardFragment"
        android:name="pol.rubiano.magicapp.features.presentation.ui.RandomCardFragment"
        android:label="@string/random_card_title" />

    <!-- SEARCH -->
    <fragment
        android:id="@+id/searchFragment"
        android:name="pol.rubiano.magicapp.features.search.SearchFragment"
        android:label="@string/search_title">

        <argument
            android:name="collectionName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>

        <argument
            android:name="deck"
            app:argType="pol.rubiano.magicapp.features.domain.models.Deck"
            app:nullable="true"
            android:defaultValue="@null"/>

        <action
            android:id="@+id/act_fromSearchFragment_toCollectionPanel"
            app:destination="@+id/collectionPanel">

            <argument
                android:name="collectionName"
                app:argType="string"
                app:nullable="true" />
        </action>


        <action
            android:id="@+id/act_fromSearchFragment_toDeckDetails"
            app:destination="@+id/deckDetailsFragment">

            <argument
                android:name="deck"
                app:argType="pol.rubiano.magicapp.features.domain.models.Deck"
                app:nullable="true" />
        </action>

        <action
            android:id="@+id/action_fromSearchFragment_toResultsFragment"
            app:destination="@+id/searchResultsFragment">

            <argument
                android:name="query"
                app:argType="string"
                app:nullable="false"/>

            <argument
                android:name="deck"
                app:argType="pol.rubiano.magicapp.features.domain.models.Deck"
                app:nullable="true" />

            <argument
                android:name="collectionName"
                app:argType="string"
                app:nullable="true" />
        </action>
    </fragment>

    <!-- RESULTS -->
    <fragment
        android:id="@+id/searchResultsFragment"
        android:name="pol.rubiano.magicapp.features.search.results.ResultsFragment"
        android:label="@string/search_results_title">

        <argument
            android:name="query"
            app:argType="string"
            app:nullable="true"/>

        <argument
            android:name="deck"
            app:argType="pol.rubiano.magicapp.features.domain.models.Deck"
            app:nullable="true" />

        <argument
            android:name="collectionName"
            app:argType="string"
            app:nullable="true" />

        <action
            android:id="@+id/act_fromResultsFragment_toCollectionPanel"
            app:destination="@+id/collectionPanel">

            <argument
                android:name="collectionName"
                app:argType="string"
                app:nullable="true" />
        </action>

        <action
            android:id="@+id/act_fromSearchResults_toDeckDetails"
            app:destination="@+id/deckDetailsFragment">

            <argument
                android:name="deck"
                app:argType="pol.rubiano.magicapp.features.domain.models.Deck"
                app:nullable="true" />
        </action>

        <action
            android:id="@+id/action_fromResultsFragment_toSelf"
            app:destination="@+id/searchResultsFragment" />

        <action
            android:id="@+id/action_search_results_fragment_to_view_card_fragment"
            app:destination="@+id/view_card_fragment" />
    </fragment>

    <!-- View Card -->
    <fragment
        android:id="@+id/view_card_fragment"
        android:name="pol.rubiano.magicapp.app.presentation.ui.ViewCardFragment"
        android:label="@string/view_card_label">
        <argument
            android:name="cardJson"
            app:argType="string" />
    </fragment>
</navigation>