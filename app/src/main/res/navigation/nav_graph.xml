    <fragment
        android:id="@+id/deckDetails"
        android:name="pol.rubiano.magicapp.features.deckdetails.DeckDetailsFragment"
        android:label="@string/str_config_deck_title">
        <argument
            android:name="deck"
            app:argType="pol.rubiano.magicapp.features.domain.models.Deck"
            app:nullable="false" />
        <action
            android:id="@+id/act_deck_details_to_search"
            app:destination="@id/searchFragment">
        </action>

        <!--        <action-->
