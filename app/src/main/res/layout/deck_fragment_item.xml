<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_m">

    <ImageView
        android:id="@+id/deck_item_image"
        android:layout_width="100dp"
        android:layout_height="139dp"
        android:contentDescription="@string/image_card_content_description"
        android:src="@drawable/card_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deck_item_name"
        style="@style/app_font_card_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deck_item_image"
        app:layout_constraintTop_toTopOf="@+id/deck_item_image"
        tools:text="Deck's Name" />

    <TextView
        android:id="@+id/deck_colors"
        style="@style/CardOracleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deck_item_image"
        app:layout_constraintTop_toBottomOf="@+id/deck_item_name"
        tools:text="Deck's colors" />

    <TextView
        android:id="@+id/deck_description"
        style="@style/CardOracle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deck_item_image"
        app:layout_constraintTop_toBottomOf="@+id/deck_colors"
        tools:text="Deck's Description" />
</androidx.constraintlayout.widget.ConstraintLayout>
