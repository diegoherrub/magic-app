<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- App Bar Layout -->
    <style name="app_tool_bar_title">
        <item name="android:fontFamily">@font/app_semibold</item>
        <item name="android:textSize">@dimen/size_l</item>
        <item name="android:textColor">@color/md_theme_onPrimary</item>
    </style>

    <!-- Section List -->
    <style name="text_section_sticky_header_title">
        <item name="android:fontFamily">@font/app_italic</item>
        <item name="android:textSize">@dimen/size_ml</item>
    </style>
    <style name="text_section_list_item_title">
        <item name="android:fontFamily">@font/app_bold</item>
        <item name="android:textSize">@dimen/size_ml</item>
    </style>
    <style name="text_section_list_item_description">
        <item name="android:fontFamily">@font/card_regular</item>
        <item name="android:textSize">@dimen/size_m</item>
    </style>

    <!-- Card -->
    <style name="app_font_card_title">
        <item name="android:fontFamily">@font/card_bold</item>
        <item name="android:textSize">@dimen/size_xl</item>
    </style>
    <style name="app_font_card_name">
        <item name="android:fontFamily">@font/card_bold</item>
        <item name="android:textSize">@dimen/size_ml</item>
    </style>
    <style name="CardType">
        <item name="android:fontFamily">@font/card_semibold</item>
        <item name="android:textSize">@dimen/size_m</item>
    </style>
    <style name="CardOracle">
        <item name="android:fontFamily">@font/card_regular</item>
        <item name="android:textSize">@dimen/size_m</item>
    </style>
    <style name="CardFlavour">
        <item name="android:fontFamily">@font/card_italic</item>
        <item name="android:textSize">@dimen/size_s</item>
    </style>

    <!-- Random Card -->
    <style name="app_font_random_card_header">
        <item name="android:fontFamily">@font/app_semibold</item>
        <item name="android:textSize">@dimen/size_ml</item>
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>

    <style name="app_font_random_card_content">
        <item name="android:fontFamily">@font/card_regular</item>
        <item name="android:textSize">@dimen/size_m</item>
        <item name="android:lineHeight">@dimen/size_l</item>
    </style>
</resources>
