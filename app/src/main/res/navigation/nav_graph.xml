    <!-- EDIT DECK -->
    <fragment
        android:id="@+id/editDeckFragment"
        android:name="pol.rubiano.magicapp.features.presentation.ui.decks.EditDeckFragment"
        android:label="@string/str_edit_deck_title">
        <argument
            android:name="deck"
            app:argType="pol.rubiano.magicapp.features.domain.models.Deck"
            app:nullable="false" />

        <action
            android:id="@+id/action_editDeckFragment_to_deckConfigFragment"
            app:destination="@+id/deckConfigFragment">
            <argument
                android:name="deck"
                app:argType="pol.rubiano.magicapp.features.domain.models.Deck"
                app:nullable="false" />
        </action>

    </fragment>

    <!-- RANDOM CARD -->
    <fragment
        android:id="@+id/randomCardFragment"
        android:name="pol.rubiano.magicapp.features.presentation.ui.RandomCardFragment"
        android:label="@string/random_card_title" />

    <!-- SEARCH FRAGMENT -->
    <fragment
        android:id="@+id/searchFragment"
        android:name="pol.rubiano.magicapp.features.presentation.ui.SearchFragment"
        android:label="@string/search_title">
        <argument
            android:name="deck"
            app:argType="pol.rubiano.magicapp.features.domain.models.Deck"
