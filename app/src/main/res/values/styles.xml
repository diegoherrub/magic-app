<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Top App Bar -->
    <style name="AppBarLayoutStyle" parent="Widget.Material3.Toolbar">
        <item name="android:elevation">0dp</item>
        <item name="titleTextAppearance">@style/app_tool_bar_title</item>
        <item name="titleCentered">true</item>
        <item name="android:background">@color/md_theme_primary</item>
    </style>

    <!-- Glossary -->
    <style name="app_section_glossary_search" parent="Widget.AppCompat.SearchView">
        <item name="iconTint">@color/md_theme_primary</item>
        <item name="queryBackground">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryHint">@string/search_title</item>
        <item name="android:layout_marginTop">@dimen/dimen_s</item>
        <item name="android:layout_marginBottom">@dimen/dimen_m</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="AppBottomBar" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/AppBottomShape</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
    </style>

    <style name="AppBottomShape">
        <item name="android:color">@android:color/transparent</item>
        <item name="android:height">0dp</item>
    </style>

    <!-- AppSectionView -->
    <style name="app_section_sticky_header" parent="text_section_sticky_header_title">
        <item name="android:background">@color/md_theme_primaryContainer</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:padding">@dimen/dimen_m</item>
        <item name="android:textSize">@dimen/size_l</item>
    </style>

    <style name="app_section_list">
        <item name="android:padding">@dimen/dimen_m</item>
    </style>

    <style name="app_section_list_item">
        <item name="android:padding">@dimen/dimen_m</item>
    </style>

    <style name="app_section_list_icon">
        <item name="tint">@color/md_theme_primary</item>
    </style>

    <style name="app_section_list_title" parent="text_section_list_item_title">
        <item name="android:layout_marginStart">@dimen/dimen_m</item>
        <item name="android:layout_marginEnd">@dimen/dimen_m</item>
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>

    <style name="app_section_list_description" parent="text_section_list_item_description">
        <item name="android:breakStrategy">simple</item>
        <item name="android:layout_marginEnd">@dimen/dimen_m</item>
    </style>

    <!-- Card -->
    <style name="style_app_card_image">
        <item name="android:paddingStart">@dimen/dimen_m</item>
        <item name="android:paddingEnd">@dimen/dimen_m</item>
        <item name="android:paddingTop">@dimen/dimen_m</item>
        <item name="android:paddingBottom">@dimen/dimen_l</item>
    </style>

    <style name="style_app_card_header">
        <item name="android:paddingStart">@dimen/dimen_m</item>
        <item name="android:paddingEnd">@dimen/dimen_m</item>
        <item name="android:paddingTop">@dimen/dimen_sm</item>
        <item name="android:paddingBottom">@dimen/dimen_sm</item>
        <item name="android:textAppearance">@style/app_font_random_card_header</item>
        <item name="android:background">@color/md_theme_primaryContainer_50</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="style_app_card_content">
        <item name="android:paddingEnd">@dimen/dimen_m</item>
        <item name="android:paddingTop">@dimen/dimen_m</item>
        <item name="android:paddingStart">@dimen/dimen_m</item>
        <item name="android:paddingBottom">@dimen/dimen_l</item>
        <item name="android:textAppearance">@style/app_font_random_card_content</item>
    </style>

    <style name="style_app_card_legalities_container">
        <item name="android:layout_marginTop">@dimen/dimen_m</item>
        <item name="android:layout_marginBottom">@dimen/dimen_l</item>
    </style>

    <style name="style_app_card_legalities">
        <item name="android:layout_margin">@dimen/dimen_s</item>
        <item name="android:padding">@dimen/dimen_s</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>