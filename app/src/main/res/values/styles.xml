<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- COMMON -->
    <style name="st_match_match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="st_match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="st_wrap_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="st_zero">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
    </style>

    <style name="st_wrap_zero">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
    </style>

    <style name="st_zero_wrap">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="st_match_zero">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
    </style>

    <!-- CONTAINERS -->
    <style name="st_cointainer" parent="st_match_match_parent">
        <item name="android:padding">@dimen/dimen_m</item>
    </style>

    <style name="st_cointainer_item" parent="st_match_wrap">
        <item name="android:padding">@dimen/dimen_m</item>
    </style>

    <style name="st_cointainer_item_cards" parent="st_cointainer_item">
        <item name="android:padding">@dimen/zero_dp</item>
    </style>

    <style name="st_cointainer_item_fit" parent="st_wrap_wrap_content">
        <item name="android:padding">@dimen/zero_dp</item>
    </style>

    <!-- IMAGES -->
    <style name="st_image_small">
        <item name="android:layout_width">@dimen/image_small_w</item>
        <item name="android:layout_height">@dimen/image_small_h</item>
        <item name="android:src">@drawable/card_back</item>
    </style>

    <style name="st_image_small_spaced">
        <item name="android:padding">@dimen/dimen_xs</item>
        <item name="android:layout_width">@dimen/image_small_w</item>
        <item name="android:layout_height">@dimen/image_small_h</item>
        <item name="android:src">@drawable/card_back</item>
    </style>

    <!-- FORMS -->
    <style name="st_edit_label" parent="st_match_wrap">
        <item name="android:textAppearance">@style/txt_edit_label</item>
        <item name="android:layout_marginVertical">@dimen/dimen_ml</item>
    </style>

    <style name="txt_edit_label">
        <item name="android:fontFamily">@font/app_light</item>
        <item name="android:textSize">@dimen/size_m</item>
        <item name="android:layout_marginVertical">@dimen/dimen_m</item>
    </style>

    <style name="st_edit_input" parent="st_match_wrap">
        <item name="android:paddingTop">@dimen/dimen_ml</item>
        <item name="android:paddingBottom">@dimen/dimen_ml</item>
        <item name="android:textAppearance">@style/txt_edit_deck_name</item>
    </style>

    <style name="txt_edit_deck_name">
        <item name="android:fontFamily">@font/card_bold</item>
        <item name="android:textSize">@dimen/size_m</item>
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>

    <!-- BUTTONS -->
    <style name="stButton" parent="st_wrap_wrap_content">
        <item name="android:layout_marginTop">@dimen/dimen_xl</item>
        <item name="android:paddingTop">@dimen/dimen_s</item>
        <item name="android:paddingBottom">@dimen/dimen_s</item>
        <item name="android:paddingStart">@dimen/dimen_m</item>
        <item name="android:paddingEnd">@dimen/dimen_m</item>
        <item name="android:textAppearance">@style/stFontButton</item>
        <item name="android:colorBackground">@color/md_theme_primary</item>
    </style>

    <style name="st_textCardCopies">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">@dimen/zero_dp</item>

        <item name="android:gravity">center_vertical</item>
<!--        <item name="android:paddingTop">@dimen/dimen_xs</item>-->
<!--        <item name="android:paddingBottom">@dimen/dimen_xs</item>-->
<!--        <item name="android:paddingLeft">@dimen/dimen_s</item>-->
<!--        <item name="android:paddingRight">@dimen/dimen_s</item>-->
        <item name="android:textAlignment">center</item>
        <item name="android:elevation">@dimen/dimen_m</item>
        <item name="android:fontFamily">@font/app_semibold</item>
        <item name="android:textSize">@dimen/size_xs</item>
        <item name="android:background">@drawable/shape_n_copies</item>
    </style>

    <style name="st_btnDelCardCopy">
        <item name="android:layout_marginStart">@dimen/dimen_xs</item>
        <item name="android:layout_marginBottom">@dimen/dimen_xs</item>
        <item name="android:layout_width">@dimen/dimen_btn</item>
        <item name="android:layout_height">@dimen/dimen_btn</item>
        <item name="android:padding">@dimen/dimen_xs</item>
        <item name="android:src">@drawable/del_circle</item>
        <item name="android:tint">@color/md_theme_del</item>
        <item name="android:background">@drawable/shape_btn_del_copy</item>
    </style>

    <style name="st_btnAddCardCopy">
        <item name="android:layout_marginEnd">@dimen/dimen_xs</item>
        <item name="android:layout_width">@dimen/dimen_btn</item>
        <item name="android:layout_height">@dimen/dimen_btn</item>
        <item name="android:padding">@dimen/dimen_xs</item>
        <item name="android:src">@drawable/add_circle</item>
        <item name="android:tint">@color/md_theme_add</item>
        <item name="android:background">@drawable/shape_btn_add_copy</item>
    </style>



    <!-- ITEMS -->
    <style name="st_item_title" parent="st_zero_wrap">
        <item name="android:layout_marginStart">@dimen/dimen_m</item>
        <item name="android:textAppearance">@style/ft_item_title</item>
    </style>

    <style name="st_item_colors" parent="st_zero_wrap">
        <item name="android:layout_marginStart">@dimen/dimen_m</item>
        <item name="android:textAppearance">@style/ft_item_colors</item>
    </style>

    <style name="st_item_description" parent="st_zero_wrap">
        <item name="android:layout_marginStart">@dimen/dimen_m</item>
        <item name="android:textAppearance">@style/ft_item_description</item>
    </style>

    <style name="st_collection_list_item" parent="st_match_wrap">
        <item name="android:textAppearance">@style/ft_item_title</item>
        <item name="android:textColor">@color/md_theme_secondary</item>
    </style>

    <!-- Top App Bar -->
    <style name="AppBarLayoutStyle" parent="Widget.Material3.Toolbar">
        <item name="android:elevation">0dp</item>
        <item name="titleTextAppearance">@style/app_tool_bar_title</item>
        <item name="android:background">@color/md_theme_primary</item>
    </style>

    <!-- Keywords -->
    <style name="app_section_keywords_search">
        <item name="android:paddingTop">@dimen/dimen_sm</item>
        <item name="android:paddingBottom">@dimen/dimen_m</item>
        <item name="iconTint">@color/md_theme_onPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryHint">@string/search_title</item>
        <item name="android:background">@color/md_theme_primaryContainer_50</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="AppBottomBar" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/AppBottomShape</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
    </style>

    <style name="AppBottomShape">
        <item name="android:color">@android:color/transparent</item>
        <item name="android:height">0dp</item>
    </style>

    <!-- AppSectionView -->
    <style name="app_section_sticky_header" parent="text_section_sticky_header_title">
        <item name="android:background">@color/md_theme_primaryContainer</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:padding">@dimen/dimen_m</item>
        <item name="android:textSize">@dimen/size_l</item>
    </style>

    <style name="app_section_list">
        <item name="android:padding">@dimen/dimen_m</item>
    </style>

    <style name="app_section_list_item">
        <item name="android:padding">@dimen/dimen_m</item>
    </style>

    <style name="app_section_list_icon">
        <item name="tint">@color/md_theme_primary</item>
    </style>

    <style name="app_section_list_title" parent="ft_item_title">
        <item name="android:layout_marginStart">@dimen/dimen_m</item>
        <item name="android:layout_marginEnd">@dimen/dimen_m</item>
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>

    <style name="app_section_list_description" parent="ft_item_description">
        <item name="android:breakStrategy">simple</item>
        <item name="android:layout_marginEnd">@dimen/dimen_m</item>
    </style>

    <!-- Card -->
    <style name="style_app_card_image">
        <item name="android:paddingStart">@dimen/dimen_m</item>
        <item name="android:paddingEnd">@dimen/dimen_m</item>
        <item name="android:paddingTop">@dimen/dimen_m</item>
        <item name="android:paddingBottom">@dimen/dimen_l</item>
    </style>

    <style name="st_separator_header" parent="st_match_wrap">
        <item name="android:paddingStart">@dimen/dimen_m</item>
        <item name="android:paddingEnd">@dimen/dimen_m</item>
        <item name="android:paddingTop">@dimen/dimen_sm</item>
        <item name="android:paddingBottom">@dimen/dimen_sm</item>
        <item name="android:textAppearance">@style/ft_separator_header</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/md_theme_primaryContainer_50</item>
    </style>

    <style name="ft_separator_header">
        <item name="android:fontFamily">@font/app_semibold</item>
        <item name="android:textSize">@dimen/size_ml</item>
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>


    <style name="style_app_card_content">
        <item name="android:paddingEnd">@dimen/dimen_m</item>
        <item name="android:paddingTop">@dimen/dimen_m</item>
        <item name="android:paddingStart">@dimen/dimen_m</item>
        <item name="android:paddingBottom">@dimen/dimen_l</item>
        <item name="android:textAppearance">@style/app_font_random_card_content</item>
    </style>

    <style name="style_app_card_legalities_container">
        <item name="android:layout_marginTop">@dimen/dimen_m</item>
        <item name="android:layout_marginBottom">@dimen/dimen_l</item>
    </style>

    <style name="style_app_card_legalities">
        <item name="android:layout_margin">@dimen/dimen_s</item>
        <item name="android:padding">@dimen/dimen_s</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Search Results -->
    <style name="style_app_search_main_container">
        <item name="android:padding">@dimen/dimen_m</item>
    </style>

    <style name="style_app_chip_group_filters">
        <item name="android:paddingStart">@dimen/dimen_m</item>
    </style>

    <!--    <style name="style_search_label">-->
    <!--        <item name="android:layout_marginTop">@dimen/dimen_ml</item>-->
    <!--        <item name="android:layout_marginStart">@dimen/dimen_m</item>-->
    <!--        <item name="android:textAppearance">@style/app_font_search_label</item>-->
    <!--    </style>-->

    <style name="style_app_edit_card_name">
        <item name="android:layout_margin">@dimen/dimen_m</item>
        <item name="android:paddingTop">@dimen/dimen_m</item>
        <item name="android:paddingBottom">@dimen/dimen_m</item>
    </style>

    <style name="style_app_search_chips_group">
        <item name="android:layout_marginTop">@dimen/dimen_m</item>
        <!--        <item name="android:paddingBottom">@dimen/dimen_m</item>-->
    </style>

    <style name="style_app_search_chip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_theme_secondary</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="style_app_search_results_bottom_bar">
        <item name="android:background">@color/md_theme_primaryContainer_50</item>
        <!--            <item name="android:padding">@dimen/zero_dp</item>-->
    </style>


    <!-- common section -->
    <style name="style_view_common_section_list_type_container">
        <item name="android:layout_marginTop">@dimen/dimen_m</item>
        <item name="android:layout_marginRight">@dimen/dimen_m</item>
        <item name="android:layout_marginLeft">@dimen/dimen_m</item>
        <item name="android:paddingBottom">@dimen/zero_dp</item>
    </style>

    <style name="style_view_common_section_list_type_icon">
        <item name="android:layout_width">@dimen/section_icon_s</item>
        <item name="android:layout_height">@dimen/section_icon_s</item>
        <item name="android:tint">@color/md_theme_primary</item>
    </style>

    <style name="style_view_common_section_list_type_title">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/app_semibold</item>
        <item name="android:textSize">@dimen/size_ml</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:layout_marginStart">@dimen/dimen_s</item>
    </style>

    <style name="style_view_common_section_list_type_content">
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_s</item>
        <item name="android:paddingBottom">@dimen/dimen_m</item>
        <item name="android:fontFamily">@font/card_regular</item>
        <item name="android:textSize">@dimen/size_m</item>
        <item name="android:breakStrategy">simple</item>
    </style>

    <!-- Error -->
    <style name="st_app_error_view_container" parent="st_zero" />

    <style name="st_guide_line" parent="st_wrap_wrap_content">
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- DECKS -->
    <style name="st_deck_name" parent="st_wrap_wrap_content">
        <item name="android:textAppearance">@style/ft_deck_name</item>
    </style>

    <style name="ft_deck_name">
        <item name="android:fontFamily">@font/app_bold</item>
        <item name="android:textSize">@dimen/size_l</item>
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>

    <style name="st_deck_colors" parent="st_wrap_wrap_content">
        <item name="android:textAppearance">@style/ft_deck_colors</item>
    </style>

    <style name="ft_deck_colors" parent="ft_deck_name" />

    <style name="st_deck_description" parent="st_match_wrap">
        <item name="android:layout_marginTop">@dimen/dimen_m</item>
        <item name="android:paddingBottom">@dimen/size_m</item>
        <item name="android:textAppearance">@style/ft_deck_description</item>
    </style>

    <style name="ft_deck_description">
        <item name="android:fontFamily">@font/app_regular</item>
        <item name="android:textSize">@dimen/size_ml</item>
    </style>

    <style name="st_deck_details_recycler" parent="st_match_zero" />

    <!-- COLLECTIONS -->
    <style name="stCollectionPanelCardsRecycler" parent="st_match_zero" />

    <!-- FONTS -->
    <style name="app_tool_bar_title">
        <item name="android:fontFamily">@font/app_semibold</item>
        <item name="android:textSize">@dimen/size_l</item>
        <item name="android:textColor">@color/md_theme_onPrimary</item>
    </style>

    <style name="text_section_sticky_header_title">
        <item name="android:fontFamily">@font/app_italic</item>
        <item name="android:textSize">@dimen/size_ml</item>
    </style>

    <style name="ft_item_title">
        <item name="android:fontFamily">@font/app_bold</item>
        <item name="android:textSize">@dimen/size_ml</item>
    </style>

    <style name="ft_item_colors">
        <item name="android:fontFamily">@font/app_regular</item>
        <item name="android:textSize">@dimen/size_ml</item>
    </style>

    <style name="ft_item_description">
        <item name="android:fontFamily">@font/app_regular</item>
        <item name="android:textSize">@dimen/size_m</item>
    </style>

    <style name="app_font_card_title">
        <item name="android:fontFamily">@font/card_bold</item>
        <item name="android:textSize">@dimen/size_xl</item>
    </style>

    <style name="font_card_name">
        <item name="android:fontFamily">@font/card_bold</item>
        <item name="android:textSize">@dimen/size_ml</item>
    </style>

    <style name="CardType">
        <item name="android:fontFamily">@font/card_semibold</item>
        <item name="android:textSize">@dimen/size_sm</item>
    </style>

    <style name="font_card_oracle">
        <item name="android:fontFamily">@font/card_regular</item>
        <item name="android:textSize">@dimen/size_m</item>
    </style>

    <style name="font_card_oracle_sb">
        <item name="android:fontFamily">@font/card_semibold</item>
        <item name="android:textSize">@dimen/size_m</item>
    </style>

    <style name="CardFlavour">
        <item name="android:fontFamily">@font/card_italic</item>
        <item name="android:textSize">@dimen/size_sm</item>
    </style>

    <style name="app_font_random_card_content">
        <item name="android:fontFamily">@font/card_regular</item>
        <item name="android:textSize">@dimen/size_m</item>
        <item name="android:lineHeight">@dimen/size_l</item>
    </style>

    <style name="app_font_search_label">
        <item name="android:fontFamily">@font/app_light</item>
        <item name="android:textSize">@dimen/size_m</item>
        <item name="android:lineHeight">@dimen/size_l</item>
    </style>

    <style name="stFontButton">
        <item name="android:fontFamily">@font/app_regular</item>
        <item name="android:textSize">@dimen/size_m</item>
    </style>
</resources>