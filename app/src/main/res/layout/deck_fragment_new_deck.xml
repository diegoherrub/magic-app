<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/newDeckTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Deck"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Input for Deck Name -->
    <EditText
        android:id="@+id/deckNameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Deck Name"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/newDeckTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_m"/>
    <EditText
        android:id="@+id/deckDescriptionInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Deck Description"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/deckNameInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_m"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/saveDeckButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Deck"
        app:layout_constraintTop_toBottomOf="@id/deckDescriptionInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_m"/>
</androidx.constraintlayout.widget.ConstraintLayout>
